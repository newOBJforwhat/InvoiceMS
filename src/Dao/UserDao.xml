<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Dao.UserDao">
	<cache eviction="FIFO" flushInterval="60000" size="512" readOnly="true" />
	<!--查询-->
	<select id="findById" parameterType="long" resultMap="UserMap">
		select * from User where id = #{id}
	</select>
	<select id="findByUsernameAndPassword" resultMap="UserMap" useCache="true">
		select id,department_id,username,password,type from User where username = #{username} 
		and password = #{password}
	</select>
	<select id="findByUsername" resultMap="UserMap">
		select id,department_id,username,password,type from User where username = #{username} 
	</select>
	<select id="findByDepartment" resultMap="UserMap">
		select id,department_id,username,password,type from User where department_id = #{department} 
	</select>
	<select id="findAll" resultMap="UserMap">
		select * from User order by id desc
	</select>
	<!--插入-->
	<insert id="applyUser" parameterType="User" useGeneratedKeys="true" keyProperty="id" >
		insert into User(department_id,username,password,name,type,is_deleted) 
		values(#{departmentId},#{username},#{password},#{name},#{type},#{isDeleted})
	</insert>
	<!--更新-->
	<update id="updateInfo" >
        update User
        <set>
            <if test="departmentId != 0">department_id=#{departmentId},</if>
            <if test="#{name} != null">name=#{name},</if>
        </set>
        where id=#{id}
	</update>
	<update id="updateDeleteStatus">
		update User set is_deleted = #{code} where id = #{id}
	</update>
	<update id="updatePassword">
		update User set password = #{password} where id = #{id}
	</update>
	<!--删除-->
	<delete id="deleteById" parameterType="long">
		delete from User where id = #{id}
	</delete>
	<resultMap type="User" id="UserMap">
		<id property="id" column="id"></id>
		<result property="departmentId" column="department_id"></result>
		<result property="name" column="name"></result>
		<result property="username" column="username"></result>
		<result property="password" column="password"></result>
		<result property="type" column="type"></result>
		<result property="isDeleted" column="is_deleted"></result>
	</resultMap>
</mapper>